<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tapandtype.rutvik.ems">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.tapandtype.rutvik.ems.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.tapandtype.rutvik.ems.InitialActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.tapandtype.rutvik.ems.SettingsActivity"
            android:parentActivityName="com.tapandtype.rutvik.ems.InitialActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.tapandtype.rutvik.ems.HomeActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.tapandtype.rutvik.ems.TakeFollowUp"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.tapandtype.rutvik.ems.ActivityAddNewInquiry"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:name="com.tapandtype.rutvik.ems.ActivityAddNewCustomer"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.tapandtype.rutvik.ems.ActivityView"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.tapandtype.rutvik.ems.ActivitySearchCustomer">
        </activity>

        <activity android:name="com.tapandtype.rutvik.ems.ActivitySearchResult">
        </activity>

        <activity android:name="com.tapandtype.rutvik.ems.ActivityCustomerDetails">
        </activity>

    </application>

</manifest>