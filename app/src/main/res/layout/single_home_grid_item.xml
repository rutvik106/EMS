<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    card_view:cardUseCompatPadding="true"
    android:layout_width="100dp"
    card_view:cardBackgroundColor="@color/primary_dark"
    android:layout_height="100dp"

    card_view:cardCornerRadius="3dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/iv_gridItemIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="New Inquiry"
            android:src="@mipmap/ic_launcher"

            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tv_gridItemLabel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:text="New Inquiry"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_below="@+id/iv_gridItemIcon" />
    </RelativeLayout>
</android.support.v7.widget.CardView>